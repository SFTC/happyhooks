    "less-loader": "^5.0.0",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.17",
    "prettier": "^1.18.2",
    "react-docgen-typescript-loader": "^3.3.0",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
